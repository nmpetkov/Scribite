{adminheader}{gt text='Aloha configuration' assign='templateTitle'}{pagesetvar name='title' value=$templateTitle}<div class="z-admin-content-pagetitle">    <img src="{$baseurl}modules/Scribite/plugins/Aloha/images/logo.png" alt="Aloha" height="22" />    <h3>{$templateTitle}</h3></div>{form cssClass='z-form'}    {formvalidationsummary}    <fieldset>        <legend>{gt text='Aloha Plugins (<a href="http://www.alohaeditor.org/guides/plugins.html" title="Aloha plugins">documentation</a>)'}</legend>        <div class="z-formrow">            {formlabel for='commonPlugins' __text='Common plugins'}            {formcheckboxlist id='commonPlugins' items=$commonPluginsItems}        </div>        <div class="z-formrow">            {formlabel for='extraPlugins' __text='Extra plugins'}            {formcheckboxlist id='extraPlugins' items=$extraPluginsItems}        </div>    </fieldset>    <div class="z-buttons z-formbuttons">        {formbutton class='z-bt-ok' commandName='save' __text='Save'}        {formbutton class='z-bt-archive' commandName='restore' __text='Restore defaults'}        {formbutton class='z-bt-cancel' commandName='cancel' __text='Cancel'}    </div>{/form}{adminfooter}